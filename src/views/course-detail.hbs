{{> layout}}

<div class="bg-gray-50 py-16">
    <div class="container mx-auto px-4">
        <!-- Breadcrumb -->
        <nav class="mb-8">
            <ol class="flex items-center space-x-2 text-sm">
                <li><a href="/" class="text-blue-600 hover:text-blue-700">Beranda</a></li>
                <li><span class="text-gray-400">/</span></li>
                <li><a href="/training" class="text-blue-600 hover:text-blue-700">Pelatihan</a></li>
                <li><span class="text-gray-400">/</span></li>
                <li class="text-gray-600">{{course.title}}</li>
            </ol>
        </nav>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2">
                <!-- Course Header -->
                <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
                    <div class="flex items-center justify-between mb-4">
                        <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">{{course.level}}</span>
                        <div class="flex text-yellow-400">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                            <span class="ml-2 text-gray-600">{{course.rating}} ({{course.students}} siswa)</span>
                        </div>
                    </div>
                    
                    <h1 class="text-3xl font-bold text-gray-800 mb-4">{{course.title}}</h1>
                    <p class="text-lg text-gray-600 mb-6">{{course.description}}</p>
                    
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                        <div class="text-center p-3 bg-gray-50 rounded">
                            <i class="fas fa-clock text-blue-600 text-xl mb-2"></i>
                            <div class="font-semibold">{{course.duration}}</div>
                            <div class="text-sm text-gray-600">Durasi</div>
                        </div>
                        <div class="text-center p-3 bg-gray-50 rounded">
                            <i class="fas fa-signal text-blue-600 text-xl mb-2"></i>
                            <div class="font-semibold">{{course.level}}</div>
                            <div class="text-sm text-gray-600">Level</div>
                        </div>
                        <div class="text-center p-3 bg-gray-50 rounded">
                            <i class="fas fa-users text-blue-600 text-xl mb-2"></i>
                            <div class="font-semibold">{{course.students}}</div>
                            <div class="text-sm text-gray-600">Siswa</div>
                        </div>
                        <div class="text-center p-3 bg-gray-50 rounded">
                            <i class="fas fa-certificate text-blue-600 text-xl mb-2"></i>
                            <div class="font-semibold">Sertifikat</div>
                            <div class="text-sm text-gray-600">Tersedia</div>
                        </div>
                    </div>

                    <img src="{{course.image}}" alt="{{course.title}}" class="w-full h-64 object-cover rounded-lg">
                </div>

                <!-- Course Content -->
                <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6">Apa yang akan Anda Pelajari?</h2>
                    <div class="space-y-4">
                        {{#each course.topics}}
                        <div class="flex items-start">
                            <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                            <div>
                                <h3 class="font-semibold text-gray-800">{{this}}</h3>
                                <p class="text-gray-600 text-sm">Pelajari konsep dan praktik terbaik untuk {{this}}</p>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>

                <!-- Learning Objectives -->
                <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6">Tujuan Pembelajaran</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        {{#each course.objectives}}
                        <div class="flex items-start">
                            <i class="fas fa-arrow-right text-blue-600 mt-1 mr-3"></i>
                            <p class="text-gray-700">{{this}}</p>
                        </div>
                        {{/each}}
                    </div>
                </div>

                <!-- Prerequisites -->
                <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6">Persyaratan</h2>
                    <div class="space-y-3">
                        {{#each course.prerequisites}}
                        <div class="flex items-center">
                            <i class="fas fa-info-circle text-blue-600 mr-3"></i>
                            <p class="text-gray-700">{{this}}</p>
                        </div>
                        {{/each}}
                    </div>
                </div>

                <!-- Instructor -->
                <div class="bg-white rounded-lg shadow-lg p-6">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6">Instruktur</h2>
                    <div class="flex items-center">
                        <img src="/images/instructors/default.jpg" alt="{{course.instructor}}" class="w-20 h-20 rounded-full mr-4">
                        <div>
                            <h3 class="font-semibold text-lg">{{course.instructor}}</h3>
                            <p class="text-gray-600">Senior Data Analyst dengan 10+ tahun pengalaman</p>
                            <div class="flex items-center mt-2">
                                <i class="fas fa-star text-yellow-400"></i>
                                <span class="ml-1 text-gray-600">4.9 (500+ reviews)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <!-- Enrollment Card -->
                <div class="bg-white rounded-lg shadow-lg p-6 sticky top-24">
                    <div class="text-center mb-6">
                        <div class="text-3xl font-bold text-blue-600 mb-2">Rp {{course.price}}</div>
                        <div class="text-gray-600">{{course.duration}}</div>
                    </div>

                    <button class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition mb-3">
                        Daftar Sekarang
                    </button>
                    
                    <button class="w-full border border-blue-600 text-blue-600 py-3 rounded-lg font-semibold hover:bg-blue-50 transition mb-6">
