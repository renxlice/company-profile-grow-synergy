{{> layout}}

<div class="bg-gray-50 py-16">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">
                Semua Pelatihan Data Analitik
            </h1>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Pilih dari berbagai kursus data analitik yang dirancang untuk membantu Anda master skills yang dibutuhkan industri
            </p>
        </div>

        <!-- Filter Section -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Level</label>
                    <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">Semua Level</option>
                        <option value="pemula">Pemula</option>
                        <option value="menengah">Menengah</option>
                        <option value="mahir">Mahir</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Durasi</label>
                    <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">Semua Durasi</option>
                        <option value="4">4 Minggu</option>
                        <option value="6">6 Minggu</option>
                        <option value="8">8 Minggu</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Harga</label>
                    <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">Semua Harga</option>
                        <option value="0-3000000">Rp 0 - 3 Juta</option>
                        <option value="3000000-5000000">Rp 3 - 5 Juta</option>
                        <option value="5000000+">Rp 5 Juta+</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Courses Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {{#each courses}}
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition course-card">
                <img src="{{image}}" alt="{{title}}" class="w-full h-48 object-cover">
                <div class="p-6">
                    <div class="flex items-center justify-between mb-2">
                        <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">{{level}}</span>
                        <div class="flex text-yellow-400 text-sm">
                            <i class="fas fa-star"></i>
                            <span class="ml-1 text-gray-600">{{rating}} ({{students}})</span>
                        </div>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">{{title}}</h3>
                    <p class="text-gray-600 mb-4">{{description}}</p>
                    
                    <div class="mb-4">
                        <h4 class="font-semibold text-sm mb-2">Topik yang akan dipelajari:</h4>
                        <div class="flex flex-wrap gap-1">
                            {{#each topics}}
                            <span class="bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded">{{this}}</span>
                            {{/each}}
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between mb-4">
                        <div>
                            <span class="text-2xl font-bold text-blue-600">Rp {{price}}</span>
                            <span class="text-gray-500 ml-2">{{duration}}</span>
                        </div>
                        <div class="text-sm text-gray-600">
                            <i class="fas fa-user-tie mr-1"></i>{{instructor}}
                        </div>
                    </div>
                    <div class="flex gap-2">
                        <a href="/training/{{slug}}" class="flex-1 bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition text-center">
                            Lihat Detail
                        </a>
                        <button class="px-4 py-2 border border-blue-600 text-blue-600 rounded-lg hover:bg-blue-50 transition">
                            <i class="far fa-heart"></i>
                        </button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        <!-- Load More -->
        <div class="text-center mt-12">
            <button class="bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition">
                Muat Lebih Banyak Kursus
            </button>
        </div>
    </div>
</div>

<!-- CTA Section -->
<section class="py-16 bg-gradient-to-r from-blue-600 to-purple-600 text-white">
    <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Tidak Menemukan Kursus yang Cocok?
        </h2>
        <p class="text-xl mb-8 text-blue-100">
            Hubungi kami untuk konsultasi dan penawaran khusus untuk kebutuhan perusahaan Anda
        </p>
        <button class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition">
            Konsultasi Gratis
        </button>
    </div>
</section>
