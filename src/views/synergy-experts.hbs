    <script>
        // Enhanced search functionality with pagination support and glitch prevention
        let searchTimeout;
        let isSearching = false;
        
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            
            // Clear previous timeout
            if (searchTimeout) {
                clearTimeout(searchTimeout);
            }
            
            // Debounce search to prevent glitches
            searchTimeout = setTimeout(() => {
                if (isSearching) return; // Prevent multiple simultaneous searches
                isSearching = true;
                
                if (searchTerm.length === 0) {
                    // Reset to first page when search is cleared
                    currentPage = 1;
                    updateExpertsGridWithPagination();
                    isSearching = false;
                    return;
                }
                
                // Search through all experts to find matches
                const matchingExperts = [];
                allExperts.forEach((expert, index) => {
                    const name = expert.name.toLowerCase();
                    const title = expert.position.toLowerCase();
                    const description = expert.description.toLowerCase();
                    const expertise = expert.expertise ? expert.expertise.toLowerCase() : '';
                    const experience = expert.experience ? expert.experience.toLowerCase() : '';
                    
                    // Combine all searchable text
                    const allText = name + ' ' + title + ' ' + description + ' ' + expertise + ' ' + experience;
                    
                    if (allText.includes(searchTerm)) {
                        matchingExperts.push({
                            ...expert,
                            originalIndex: index
                        });
                    }
                });
                
                console.log('Search term:', searchTerm);
                console.log('Matching experts:', matchingExperts.length);
                
                if (matchingExperts.length === 0) {
                    // Show no results message
                    const expertsGrid = document.getElementById('expertsGrid');
                    expertsGrid.innerHTML = `
                        <div id="noResultsMessage" class="col-span-full text-center py-8 text-gray-500">
                            <div class="text-6xl mb-4">ðŸ”</div>
                            <h3 class="text-xl font-semibold mb-2">Tidak ada hasil ditemukan</h3>
                            <p>Tidak ada pengajar yang cocok dengan pencarian "${searchTerm}"</p>
                        </div>
                    `;
                    isSearching = false;
                    return;
                }
                
                // Find the page where the first matching expert is located
                const firstMatchIndex = matchingExperts[0].originalIndex;
                const targetPage = Math.floor(firstMatchIndex / itemsPerPage) + 1;
                
                console.log('First match index:', firstMatchIndex);
                console.log('Target page:', targetPage);
                
                // Switch to the target page
                currentPage = targetPage;
                updateExpertsGridWithPagination();
                
                // Highlight matching experts on the current page without scrolling
                setTimeout(() => {
                    const expertCards = document.querySelectorAll('.expert-card');
                    expertCards.forEach(card => {
                        const name = card.querySelector('h3')?.textContent.toLowerCase() || '';
                        const title = card.querySelector('p.font-semibold')?.textContent.toLowerCase() || '';
                        const description = card.querySelector('p.text-gray-600')?.textContent.toLowerCase() || '';
                        const expertise = card.querySelector('.bg-blue-100')?.textContent.toLowerCase() || '';
                        const experience = card.querySelector('.bg-purple-100')?.textContent.toLowerCase() || '';
                        
                        const allText = name + ' ' + title + ' ' + description + ' ' + expertise + ' ' + experience;
                        
                        if (allText.includes(searchTerm)) {
                            // Highlight matching card
                            card.classList.add('ring-2', 'ring-blue-500', 'ring-offset-2');
                            // Remove scroll to prevent glitch
                            // card.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        } else {
                            card.classList.remove('ring-2', 'ring-blue-500', 'ring-offset-2');
                        }
                    });
                    isSearching = false;
                }, 300); // Increased delay to ensure grid is fully updated
            }, 300); // Debounce delay
        });

        // Filter functionality
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Update active button
                document.querySelectorAll('.filter-btn').forEach(b => {
                    b.classList.remove('bg-blue-600', 'text-white');
                    b.classList.add('bg-gray-200', 'text-gray-700');
                });
                this.classList.remove('bg-gray-200', 'text-gray-700');
                this.classList.add('bg-blue-600', 'text-white');
                
                // Get filter value
                const filter = this.dataset.filter;
                
                // Filter experts from the main array
                let filteredExperts = allExperts;
                if (filter !== 'all') {
                    filteredExperts = allExperts.filter(expert => {
                        const category = expert.category ? 
                            expert.category.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9-]/g, '') :
                            getDetectedCategory(expert.position);
                        return category === filter;
                    });
                }
                
                // Update the displayed experts with filtered results
                const originalExperts = allExperts;
                allExperts = filteredExperts;
                currentPage = 1; // Reset to first page
                updateExpertsGridWithPagination();
                
                // Show results count
                if (filter === 'all') {
                    console.log(`Menampilkan semua ${originalExperts.length} expert`);
                } else {
                    console.log(`Menampilkan ${filteredExperts.length} expert untuk kategori: ${filter}`);
                }
                
                // Show message if no results
                if (filteredExperts.length === 0) {
                    const expertsGrid = document.getElementById('expertsGrid');
                    expertsGrid.innerHTML = `
                        <div class="col-span-full text-center py-12">
                            <div class="text-6xl mb-4">ðŸ”</div>
