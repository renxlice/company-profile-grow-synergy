        // Update Academy Section
        function updateAcademySection(academies) {
            const academyContainer = document.getElementById('academyGrid');
            if (academies.length > 0 && academyContainer) {
                // Clear existing content
                academyContainer.innerHTML = '';
                
                // Show only first 3 academies
                const limitedAcademies = academies.slice(0, 3);
                
                limitedAcademies.forEach(academy => {
                    const academyCard = createAcademyCard(academy);
                    academyContainer.appendChild(academyCard);
                });
                
                console.log('Academy section updated with', limitedAcademies.length, 'items');
            } else {
                console.log('Academy section: No data or container not found');
            }
        }

        function createAcademyCard(academy) {
            const div = document.createElement('div');
            div.className = 'rounded-lg p-4';
            div.style.backgroundColor = '#225273';
            
            // PERBAIKAN: Gunakan ID yang valid
            const academyId = academy.id || Math.random().toString(36).substr(2, 9);
            const academyImage = academy.image || 'https://picsum.photos/seed/academy-' + academyId + '/400/300.jpg';
            const academyTitle = academy.title || 'Program Academy';
            const academyDescription = academy.description || 'Deskripsi program';
            const academyAuthor = academy.author || academy.instructor || 'Admin';
            const academyRating = academy.rating || 4.9;
            const academyStudents = academy.students || 2500;
            const academyDuration = academy.duration || '12 Minggu';
            const academyLevel = academy.level || 'Pemula';
            const academySchedule = academy.schedule || 'Full Time';
            const academyFormat = academy.format || 'Online';
            
            // Buat bintang rating
            const fullStars = Math.floor(academyRating);
            const hasHalfStar = academyRating % 1 >= 0.5;
            let starsHtml = '';
            
            for (let i = 0; i < 5; i++) {
                if (i < fullStars) {
                    starsHtml += '<i class="fas fa-star"></i>';
                } else if (i === fullStars && hasHalfStar) {
                    starsHtml += '<i class="fas fa-star-half-alt"></i>';
                } else {
                    starsHtml += '<i class="far fa-star"></i>';
                }
            }
            
            const academyImg = document.createElement('img');
            academyImg.src = academyImage;
            academyImg.alt = academyTitle;
            academyImg.className = 'w-full h-32 object-cover rounded-lg';
            
            const imageContainer = document.createElement('div');
            imageContainer.className = 'mb-3';
            imageContainer.appendChild(academyImg);
            
            const titleEl = document.createElement('h4');
            titleEl.className = 'text-lg font-semibold text-white mb-1';
            titleEl.textContent = academyTitle;
            
            const descEl = document.createElement('p');
            descEl.className = 'text-white text-sm mb-2';
            descEl.textContent = academyDescription;
            
            const authorEl = document.createElement('p');
            authorEl.className = 'text-white text-sm mb-2';
            authorEl.textContent = 'Penulis: ' + academyAuthor;
            
            const starsContainer = document.createElement('div');
            starsContainer.className = 'flex text-yellow-400 text-xs';
            starsContainer.innerHTML = starsHtml;
            
            const ratingSpan = document.createElement('span');
            ratingSpan.className = 'text-white text-xs ml-2';
            ratingSpan.textContent = parseFloat(academyRating).toFixed(1);
            
            const ratingContainer = document.createElement('div');
            ratingContainer.className = 'flex items-center';
            ratingContainer.appendChild(starsContainer);
            ratingContainer.appendChild(ratingSpan);
            
            const studentsSpan = document.createElement('span');
            studentsSpan.className = 'mr-2';
            studentsSpan.textContent = academyStudents.toLocaleString() + ' siswa';
            
            const durationSpan = document.createElement('span');
            durationSpan.className = 'mr-2';
            durationSpan.textContent = academyDuration;
            
            const studentContainer = document.createElement('div');
            studentContainer.className = 'flex items-center text-xs text-white';
            studentContainer.appendChild(studentsSpan);
            studentContainer.appendChild(durationSpan);
            
            const ratingSection = document.createElement('div');
            ratingSection.className = 'flex items-center justify-between mb-3';
            ratingSection.appendChild(ratingContainer);
            ratingSection.appendChild(studentContainer);
            
            div.appendChild(imageContainer);
            div.appendChild(titleEl);
            div.appendChild(descEl);
            div.appendChild(authorEl);
            div.appendChild(ratingSection);
            
            return div;
        }

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, initializing dynamic content...');
            loadDynamicContent();
        });
    </script>

