                // Try to load from Firebase with timeout
                const loadWithTimeout = async () => {
                    const timeout = new Promise((_, reject) => 
                        setTimeout(() => reject(new Error('Loading timeout')), 5000)
                    );
                    
                    const firebaseLoad = Promise.all([
                        db.collection('heroSection').get(),
                        db.collection('aboutSection').get(),
                        db.collection('experts').get(),
                        db.collection('portfolios').get(),
                        db.collection('academies').get()
                    ]);
                    
                    return Promise.race([firebaseLoad, timeout]);
                };
                
                let results;
                try {
                    results = await loadWithTimeout();
                    console.log('DEBUG: Firebase results received successfully');
                } catch (error) {
                    console.log('DEBUG: Firebase loading failed:', error.message);
                    return;
                }
                
                console.log('DEBUG: Firebase results received:', results);
                console.log('DEBUG: Results length:', results.length);
                console.log('DEBUG: Hero section docs:', results[0]?.docs?.length);
                console.log('DEBUG: About section docs:', results[1]?.docs?.length);
                
