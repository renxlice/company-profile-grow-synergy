                                testimonial.createdAt,
                                doc.id
                            );
                            slider.appendChild(card);
                        });
                    })
                    .catch((error) => {
                        console.error("Error loading testimonials: ", error);
                        showErrorMessage('Gagal memuat testimonial. Menggunakan mode offline.');
                        // Fallback to localStorage if Firestore fails
                        loadSavedTestimonials();
                    });
            }
            
            // Save testimonial to Firestore
            function saveTestimonialToFirestore(name, position, rating, message) {
                const testimonialData = {
                    name: name,
                    position: position,
                    rating: rating,
                    message: message,
                    createdAt: new Date(),
                    status: 'approved' // Auto-approve testimonials
                };
                
                testimonialsCollection.add(testimonialData)
                    .then((docRef) => {
                        console.log("Testimonial saved with ID: ", docRef.id);
                    })
                    .catch((error) => {
                        console.error("Error saving testimonial: ", error);
                        showErrorMessage('Gagal menyimpan testimonial. Silakan coba lagi.');
                        // Fallback to localStorage
                        saveTestimonial(name, position, rating, message);
                    });
            }
            
            // Fallback localStorage functions (backup)
            function loadSavedTestimonials() {
                const savedTestimonials = localStorage.getItem('testimonials');
                if (savedTestimonials) {
                    const testimonials = JSON.parse(savedTestimonials);
                    testimonials.forEach(testimonial => {
                        const card = createTestimonialCard(testimonial.name, testimonial.position, testimonial.rating, testimonial.message, testimonial.timestamp);
                        slider.appendChild(card);
                    });
                }
            }
            
            function saveTestimonial(name, position, rating, message) {
                const savedTestimonials = localStorage.getItem('testimonials');
                const testimonials = savedTestimonials ? JSON.parse(savedTestimonials) : [];
                
                testimonials.push({
                    name,
                    position,
                    rating,
                    message,
                    timestamp: new Date().toISOString()
                });
                
                localStorage.setItem('testimonials', JSON.stringify(testimonials));
            }

    // Testimonial carousel scrolling
    const container = document.getElementById('testimonialsContainer');
    const slider = document.getElementById('testimonialsSlider');
    const scrollLeftBtn = document.getElementById('scrollLeft');
    const scrollRightBtn = document.getElementById('scrollRight');

    // Load saved testimonials on page load
    if (slider) {
        loadTestimonialsFromFirestore();
    }

    if (container && slider && scrollLeftBtn && scrollRightBtn) {
        // Scroll left
        scrollLeftBtn.addEventListener('click', function() {
            container.scrollBy({
                left: -340,
                behavior: 'smooth'
            });
        });

        // Scroll right
        scrollRightBtn.addEventListener('click', function() {
            container.scrollBy({
                left: 340,
                behavior: 'smooth'
            });
        });

        // Hide/show scroll buttons based on scroll position
        function updateScrollButtons() {
            const maxScroll = container.scrollWidth - container.clientWidth;

            if (container.scrollLeft <= 0) {
                scrollLeftBtn.style.display = 'none';
            } else {
                scrollLeftBtn.style.display = 'block';
            }

            if (container.scrollLeft >= maxScroll) {
                scrollRightBtn.style.display = 'none';
            } else {
                scrollRightBtn.style.display = 'block';
            }
        }

        container.addEventListener('scroll', updateScrollButtons);
        updateScrollButtons(); // Initial check
    }

    // Testimonial modal functionality
    const addTestimonialBtn = document.getElementById('addTestimonialBtn');
    const testimonialModal = document.getElementById('testimonialModal');
    const testimonialForm = document.getElementById('testimonialForm');
    const cancelTestimonialBtn = document.getElementById('cancelTestimonial');
    const ratingStars = document.querySelectorAll('.star-btn');
    const ratingInput = document.getElementById('testimonialRating');

    if (addTestimonialBtn && testimonialModal) {
        // Rating state variables - declared outside to maintain scope
        let currentRating = 5; // Default rating
        
        // Function to update star display with inline styles for persistence
        function updateStarDisplay(rating) {
            console.log('Updating star display to rating:', rating);
            ratingStars.forEach((star, index) => {
                if (index < rating) {
                    // Use inline styles for maximum persistence
                    star.style.color = '#fbbf24';
                    star.style.setProperty('color', '#fbbf24', 'important');
                    star.classList.remove('text-gray-300');
                    star.classList.add('text-yellow-400');
                } else {
                    star.style.color = '#d1d5db';
                    star.style.setProperty('color', '#d1d5db', 'important');
                    star.classList.remove('text-yellow-400');
                    star.classList.add('text-gray-300');
                }
            });
        }

        // Open modal
        addTestimonialBtn.addEventListener('click', function() {
            testimonialModal.classList.remove('hidden');
            testimonialModal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
            // Reset and show initial rating
            currentRating = 5;
            updateStarDisplay(currentRating);
            ratingInput.value = currentRating;
        });

        // Close modal
        function closeTestimonialModal() {
            testimonialModal.classList.add('hidden');
            testimonialModal.style.display = 'none';
            document.body.style.overflow = 'auto';
            testimonialForm.reset();
            // Reset rating state
            currentRating = 5;
            updateStarDisplay(currentRating);
            ratingInput.value = currentRating;
        }

        if (cancelTestimonialBtn) {
            cancelTestimonialBtn.addEventListener('click', closeTestimonialModal);
        }

        // Close modal when clicking outside
        testimonialModal.addEventListener('click', function(e) {
            if (e.target === testimonialModal) {
                closeTestimonialModal();
            }
        });

        // Rating stars functionality with persistent state
        // Add hover effects
        ratingStars.forEach((star, index) => {
            // Mouse enter - show preview
            star.addEventListener('mouseenter', function() {
                const hoverRating = index + 1;
                ratingStars.forEach((s, i) => {
                    if (i < hoverRating) {
                        s.classList.remove('text-gray-300');
                        s.classList.add('text-yellow-400');
                    } else {
                        s.classList.remove('text-yellow-400');
                        s.classList.add('text-gray-300');
                    }
                });
            });

            // Mouse leave - restore current rating
            star.addEventListener('mouseleave', function() {
                updateStarDisplay(currentRating);
            });

            // Click - set rating
            star.addEventListener('click', function() {
                currentRating = index + 1;
                ratingInput.value = currentRating;
                updateStarDisplay(currentRating);
                console.log('Star clicked! New rating:', currentRating);
            });
        });

        // Set initial rating to 5 stars
        updateStarDisplay(currentRating);
        ratingInput.value = currentRating;

        // Add multiple event listeners to maintain star display persistently
        const formInputs = testimonialForm.querySelectorAll('input, textarea');
        formInputs.forEach(input => {
            // Ensure stars remain highlighted when input gets focus
            input.addEventListener('focus', function() {
                console.log('Input focused, maintaining rating:', currentRating);
                updateStarDisplay(currentRating);
            });
            
            // Ensure stars remain highlighted when typing
            input.addEventListener('input', function() {
                updateStarDisplay(currentRating);
            });
            
            // Ensure stars remain highlighted when clicking input
            input.addEventListener('click', function() {
                updateStarDisplay(currentRating);
            });
        });

        // Also ensure stars stay highlighted when clicking anywhere in the modal
        testimonialModal.addEventListener('click', function(e) {
            if (!e.target.classList.contains('star-btn')) {
                setTimeout(() => {
                    updateStarDisplay(currentRating);
                }, 10);
            }
        });

        // Ensure stars stay highlighted periodically (backup)
        setInterval(() => {
            if (!testimonialModal.classList.contains('hidden')) {
                updateStarDisplay(currentRating);
            }
        }, 1000);

        // Form submission
        if (testimonialForm) {
            testimonialForm.addEventListener('submit', function(e) {
                e.preventDefault();

                const name = document.getElementById('testimonialName').value;
                const position = document.getElementById('testimonialPosition').value;
                const rating = parseInt(document.getElementById('testimonialRating').value);
                const message = document.getElementById('testimonialMessage').value;

                // Save testimonial to Firestore
                saveTestimonialToFirestore(name, position, rating, message);

                // Create new testimonial card (will be added after Firestore save)
                const timestamp = new Date();
                const newTestimonial = createTestimonialCard(name, position, rating, message, timestamp, null);

                // Add to slider immediately for better UX
                if (slider) {
                    slider.appendChild(newTestimonial);

                    // Scroll to the new testimonial
                    setTimeout(() => {
                        container.scrollBy({
                            left: 340,
                            behavior: 'smooth'
                        });
                    }, 100);
                }

                closeTestimonialModal();
                showSuccessMessage('Testimoni berhasil ditambahkan!');
            });
        }
    }

    // Function to create testimonial card
    function createTestimonialCard(name, position, rating, message, timestamp = null, docId = null) {
        const card = document.createElement('div');
        card.className = 'testimonial-card flex-shrink-0 w-80 rounded-lg shadow-lg p-6';
        card.style.backgroundColor = '#225273';

        // Generate timestamp if not provided
        const testimonialTimestamp = timestamp || new Date().toISOString();

        // Generate star HTML
        let starsHtml = '';
        for (let i = 1; i <= 5; i++) {
            if (i <= rating) {
                starsHtml += '<i class="fas fa-star"></i>';
            } else {
                starsHtml += '<i class="far fa-star"></i>';
            }
        }

        card.innerHTML = `
            <div class="flex text-yellow-400 mb-4">
                ${starsHtml}
            </div>
            <p class="text-white mb-4 italic">
                "${message}"
            </p>
            <div>
                <div class="font-semibold text-white">${name}</div>
                <div class="text-sm text-gray-300">${position}</div>
            </div>
        `;

        return card;
    }

    // Function to show success message
    function showSuccessMessage(message) {
        const successDiv = document.createElement('div');
        successDiv.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
        successDiv.textContent = message;
        document.body.appendChild(successDiv);

        setTimeout(() => {
            successDiv.remove();
        }, 3000);
    }

    // Function to show error message
    function showErrorMessage(message) {
        const errorDiv = document.createElement('div');
        errorDiv.className = 'fixed top-4 right-4 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
        errorDiv.textContent = message;
        document.body.appendChild(errorDiv);

        setTimeout(() => {
            errorDiv.remove();
        }, 3000);
    }
});

</script>

