<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="/js/console-control.js"></script>
</head>
<body class="bg-gray-100">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <i class="fas fa-blog text-orange-600 text-2xl mr-3"></i>
                    <h1 class="text-xl font-semibold text-gray-800">{{#if item}}Edit Article{{else}}Create Article{{/if}}</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="text-gray-600">Welcome, {{username}}</span>
                    <a href="/admin/logout" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md text-sm font-medium transition">
                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Sidebar Navigation -->
    <div class="flex">
        <aside class="w-64 bg-white shadow-md h-screen sticky top-0">
            <div class="p-4">
                <ul class="space-y-2">
                    <li>
                        <a href="/admin/dashboard" class="flex items-center p-2 text-gray-700 rounded-md hover:bg-gray-100">
                            <i class="fas fa-home w-5"></i>
                            <span class="ml-3">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/hero-section" class="flex items-center p-2 text-gray-700 rounded-md hover:bg-gray-100">
                            <i class="fas fa-image w-5"></i>
                            <span class="ml-3">Hero Section</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/about-section" class="flex items-center p-2 text-gray-700 rounded-md hover:bg-gray-100">
                            <i class="fas fa-info-circle w-5"></i>
                            <span class="ml-3">Tentang Kami</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/experts" class="flex items-center p-2 text-gray-700 rounded-md hover:bg-gray-100">
                            <i class="fas fa-users w-5"></i>
                            <span class="ml-3">Synergy Experts</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/portfolios" class="flex items-center p-2 text-gray-700 rounded-md hover:bg-gray-100">
                            <i class="fas fa-briefcase w-5"></i>
                            <span class="ml-3">Synergy Portfolio</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/academies" class="flex items-center p-2 text-gray-700 rounded-md hover:bg-gray-100">
                            <i class="fas fa-graduation-cap w-5"></i>
                            <span class="ml-3">Synergy Academy</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/testimonials" class="flex items-center p-2 text-gray-700 rounded-md hover:bg-gray-100">
                            <i class="fas fa-comments w-5"></i>
                            <span class="ml-3">Testimoni</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/blogs" class="flex items-center p-2 bg-gray-100 text-gray-700 rounded-md">
                            <i class="fas fa-blog w-5"></i>
                            <span class="ml-3">Blog Management</span>
                        </a>
                    </li>
                </ul>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-6">
            <div class="max-w-4xl mx-auto">
                <!-- Form -->
                <div class="bg-white rounded-lg shadow p-6">
                    {{#if error}}
                    <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-md">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-exclamation-circle text-red-400"></i>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-sm font-medium text-red-800">Error</h3>
                                <div class="mt-2 text-sm text-red-700">
                                    <p>{{error}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                    
                    <form action="/admin/blogs/create" method="POST" enctype="multipart/form-data">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Title -->
                            <div class="col-span-2">
                                <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
                                    Article Title <span class="text-red-500">*</span>
                                </label>
                                <input 
                                    type="text" 
                                    id="title" 
                                    name="title" 
                                    required
                                    value="{{#if blog}}{{blog.title}}{{/if}}"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                                    placeholder="e.g., Advanced Data Analysis Techniques"
                                >
                            </div>

                            <!-- Slug -->
                            <div>
                                <label for="slug" class="block text-sm font-medium text-gray-700 mb-2">
                                    URL Slug <span class="text-red-500">*</span>
                                </label>
                                <input 
                                    type="text" 
                                    id="slug" 
                                    name="slug" 
                                    required
                                    value="{{#if blog}}{{blog.slug}}{{/if}}"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                                    placeholder="advanced-data-analysis-techniques"
                                >
                            </div>

                            <!-- Category -->
                            <div>
                                <label for="category" class="block text-sm font-medium text-gray-700 mb-2">
                                    Category <span class="text-red-500">*</span>
                                </label>
                                <select 
                                    id="category" 
                                    name="category" 
                                    required
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                                >
                                    <option value="">Select Category</option>
                                    <option value="Tutorial" {{#if (eq blog.category "Tutorial")}}selected{{/if}}>Tutorial</option>
                                    <option value="Tips" {{#if (eq blog.category "Tips")}}selected{{/if}}>Tips</option>
                                    <option value="Karir" {{#if (eq blog.category "Karir")}}selected{{/if}}>Karir</option>
                                    <option value="Industri" {{#if (eq blog.category "Industri")}}selected{{/if}}>Industri</option>
                                </select>
                            </div>

                            <!-- Author -->
                            <div>
                                <label for="author" class="block text-sm font-medium text-gray-700 mb-2">
                                    Author <span class="text-red-500">*</span>
                                </label>
                                <input 
                                    type="text" 
                                    id="author" 
                                    name="author" 
                                    required
                                    value="{{#if blog}}{{blog.author}}{{/if}}"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                                    placeholder="Author name"
                                >
                            </div>

                            <!-- Date -->
                            <div>
                                <label for="date" class="block text-sm font-medium text-gray-700 mb-2">
                                    Tanggal Publikasi
                                </label>
                                <input 
                                    type="date" 
                                    id="publishedDate" 
                                    name="publishedDate" 
                                    required
                                    value="{{#if blog}}{{blog.publishedDate}}{{/if}}"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                                >
                            </div>

                            <!-- Read Time -->
                            <div>
                                <label for="readTime" class="block text-sm font-medium text-gray-700 mb-2">
                                    Read Time (minutes) <span class="text-red-500">*</span>
                                </label>
                                <input 
                                    type="number" 
                                    id="readTime" 
                                    name="readTime" 
                                    required
                                    min="1"
                                    value="{{#if blog}}{{blog.readTime}}{{/if}}"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                                    placeholder="8"
                                >
                            </div>

                            <!-- Tags -->
                            <div class="col-span-2">
                                <label for="tags" class="block text-sm font-medium text-gray-700 mb-2">
                                    Tags (comma-separated)
                                </label>
                                <input 
                                    type="text" 
                                    id="tags" 
                                    name="tags"
                                    value="{{#if blog}}{{blog.tags}}{{/if}}"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                                    placeholder="e.g., data science, machine learning, tutorial (pisahkan dengan koma)"
                                >
                                <p class="text-xs text-gray-500 mt-1">Separate tags with commas</p>
                            </div>

                            <!-- Description -->
                            <div class="col-span-2">
                                <label for="excerpt" class="block text-sm font-medium text-gray-700 mb-2">
                                    Ringkasan <span class="text-red-500">*</span>
                                </label>
                                <textarea 
                                    id="excerpt" 
                                    name="excerpt" 
                                    required
                                    rows="3"
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                                    placeholder="Tuliskan ringkasan blog (2-3 kalimat)"
                                >{{#if blog}}{{blog.excerpt}}{{/if}}</textarea>
                            </div>

                            <!-- Featured Image -->
                            <div class="col-span-2">
                                <label for="image" class="block text-sm font-medium text-gray-700 mb-2">
                                    Featured Image <span class="text-red-500">*</span>
                                </label>
                                <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md hover:border-gray-400 transition-colors">
                                    <div class="space-y-1 text-center">
                                        {{#if blog.image}}
                                        <div class="mb-4">
                                            <img src="{{blog.image}}" alt="Current image" class="mx-auto h-32 w-48 object-cover rounded">
                                            <p class="text-sm text-gray-500 mt-2">Current image</p>
                                        </div>
                                        {{/if}}
                                        <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                                            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                        <div class="flex text-sm text-gray-600">
                                            <label for="image" class="relative cursor-pointer bg-white rounded-md font-medium text-orange-600 hover:text-orange-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-orange-500">
                                                <span>Upload a file</span>
                                                <input id="image" name="image" type="file" class="sr-only" accept="image/*">
                                            </label>
                                            <p class="pl-1">or drag and drop</p>
                                        </div>
                                        <p class="text-xs text-gray-500">PNG, JPG, GIF up to 5MB</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Status -->
                            <div>
                                <label for="status" class="block text-sm font-medium text-gray-700 mb-2">
                                    Status
                                </label>
                                <select 
                                    id="status" 
                                    name="status" 
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                                >
                                    <option value="draft">Draft</option>
                                    <option value="published" selected>Published</option>
                                    <option value="archived">Archived</option>
                                </select>
                            </div>

                            <!-- Featured -->
                            <div>
                                <label class="flex items-center">
                                    <input 
                                        type="checkbox" 
                                        id="featured" 
                                        name="featured" 
                                        value="true"
                                        class="h-4 w-4 text-orange-600 focus:ring-orange-500 border-gray-300 rounded"
                                    >
                                    <span class="ml-2 text-sm text-gray-700">Featured Blog</span>
                                </label>
                            </div>

                            <!-- Content -->
                            <div class="col-span-2">
                                <label for="content" class="block text-sm font-medium text-gray-700 mb-2">
                                    Article Content <span class="text-red-500">*</span>
                                </label>
                                <div id="editor" style="height: 300px;"></div>
                                <input type="hidden" id="content" name="content" value="{{#if blog}}{{blog.content}}{{/if}}">
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="mt-6 flex justify-end space-x-3">
                            <a href="/admin/blogs" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition">
                                Cancel
                            </a>
                            <button type="submit" class="px-4 py-2 bg-orange-600 text-white rounded-md hover:bg-orange-700 transition" style="background-color: #ea580c; color: white; padding: 8px 16px; border-radius: 6px; border: none; cursor: pointer; font-weight: 500;">
                                <i class="fas fa-save mr-2"></i>{{#if item}}Update{{else}}Create{{/if}}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</body>
</html>

<script>
    // Initialize Quill editor
    var quill = new Quill('#editor', {
        theme: 'snow',
        modules: {
            toolbar: [
                [{ 'header': [1, 2, 3, false] }],
                ['bold', 'italic', 'underline', 'strike'],
                ['blockquote', 'code-block'],
                [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                [{ 'indent': '-1'}, { 'indent': '+1' }],
                ['link', 'image'],
                ['clean']
            ]
        }
    });

    // Set initial content if editing
    document.addEventListener('DOMContentLoaded', function() {
        const contentInput = document.getElementById('content');
        if (contentInput && contentInput.value) {
            quill.root.innerHTML = contentInput.value;
        }

        // Auto-generate slug from title
        const titleInput = document.getElementById('title');
        const slugInput = document.getElementById('slug');
        
        if (titleInput && slugInput) {
            titleInput.addEventListener('input', function() {
                if (!slugInput.value || slugInput.dataset.autoGenerated === 'true') {
                    const slug = this.value.toLowerCase()
                        .replace(/[^a-z0-9\s-]/g, '')
                        .replace(/\s+/g, '-')
                        .replace(/-+/g, '-')
                        .trim('-');
                    slugInput.value = slug;
                    slugInput.dataset.autoGenerated = 'true';
                }
            });

            slugInput.addEventListener('input', function() {
                this.dataset.autoGenerated = 'false';
            });
        }

        // Handle form submission
        const form = document.querySelector('form');
        form.addEventListener('submit', function(e) {
            // Update content input with Quill content
            document.getElementById('content').value = quill.root.innerHTML;
        });

        // Handle file preview
        const imageInput = document.getElementById('image');
        if (imageInput) {
            imageInput.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        // Update preview
                        const previewContainer = imageInput.closest('.border-dashed').querySelector('.space-y-1');
                        const existingPreview = previewContainer.querySelector('img');
                        
                        if (existingPreview) {
                            existingPreview.src = e.target.result;
                        } else {
                            const img = document.createElement('img');
                            img.src = e.target.result;
                            img.alt = 'Preview';
                            img.className = 'mx-auto h-32 w-48 object-cover rounded mb-4';
                            previewContainer.insertBefore(img, previewContainer.firstChild);
                        }
                    };
                    reader.readAsDataURL(file);
                }
            });
        }
    });
</script>
