    <!-- Share Functionality -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const blogTitle = '{{blog.title}}';
            const blogUrl = window.location.href;
            const blogDescription = '{{blog.description}}';

            // Facebook Share
            document.getElementById('share-facebook').addEventListener('click', function(e) {
                e.preventDefault();
                const url = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(blogUrl)}`;
                window.open(url, '_blank', 'width=600,height=400');
            });

            // X (Twitter) Share
            document.getElementById('share-x').addEventListener('click', function(e) {
                e.preventDefault();
                const text = `${blogTitle} - ${blogDescription}`;
                const url = `https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}&url=${encodeURIComponent(blogUrl)}`;
                window.open(url, '_blank', 'width=600,height=400');
            });

            // LinkedIn Share
            document.getElementById('share-linkedin').addEventListener('click', function(e) {
                e.preventDefault();
                const url = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(blogUrl)}`;
                window.open(url, '_blank', 'width=600,height=400');
            });

            // WhatsApp Share
            document.getElementById('share-whatsapp').addEventListener('click', function(e) {
                e.preventDefault();
                const text = `${blogTitle} - ${blogDescription} ${blogUrl}`;
                const url = `https://wa.me/?text=${encodeURIComponent(text)}`;
                window.open(url, '_blank');
            });
        });
    </script>
