                console.log('Creating card for academy', index, academy);
                const academyCard = createAcademyCard(academy);
                console.log('Academy card created:', academyCard);
                academyGrid.appendChild(academyCard);
                console.log('Academy card appended');
            });
            
            console.log('All academy cards added to grid');
        }

        // Create academy card HTML
        function createAcademyCard(academy) {
            try {
                console.log('Creating academy card for:', academy);
                console.log('Academy price:', academy.price);
                console.log('Academy price type:', typeof academy.price);
                
                const div = document.createElement('div');
                div.className = 'academy-card bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition';
                
                // Set category for filtering
                div.setAttribute('data-category', academy.level || academy.mode || 'general');
                
                // Use string concatenation to avoid template literal issues
                const academyImage = academy.image || 'https://picsum.photos/seed/academy-' + academy.id + '/400/300.jpg';
                const academyTitle = academy.title || 'Course Title';
                const academyDescription = academy.description || 'Course description';
                const academyPrice = academy.price ? 'Rp ' + academy.price.toLocaleString('id-ID') : 'Free';
                console.log('Raw academy.price:', academy.price);
                console.log('Processed academyPrice:', academyPrice);
                const academyRating = academy.rating || 0;
                const academyStudents = academy.students || 0;
                const academyDuration = academy.duration || '4 weeks';
                const academyInstructor = academy.author || 'Instructor';
                const academyLevel = academy.level || 'Beginner';
                const academySchedule = academy.schedule || 'Flexible';
                const academyMode = academy.mode || 'Online';
                
                // Change price overlay to orange
                div.innerHTML = 
