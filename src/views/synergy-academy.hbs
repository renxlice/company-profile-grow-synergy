        // Enhanced search functionality with pagination support and glitch prevention
        let searchTimeout;
        let isSearching = false;
        
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            
            // Clear previous timeout
            if (searchTimeout) {
                clearTimeout(searchTimeout);
            }
            
            // Debounce search to prevent glitches
            searchTimeout = setTimeout(() => {
                if (isSearching) return; // Prevent multiple simultaneous searches
                isSearching = true;
                
                if (searchTerm.length === 0) {
                    // Reset to first page when search is cleared
                    currentPage = 1;
                    updateAcademyGridWithPagination();
                    isSearching = false;
                    return;
                }
                
                // Search through all academies to find matches
                const matchingAcademies = [];
                allAcademies.forEach((academy, index) => {
                    const title = academy.title.toLowerCase();
                    const description = academy.description.toLowerCase();
                    const instructor = academy.instructor ? academy.instructor.toLowerCase() : '';
                    const level = academy.level ? academy.level.toLowerCase() : '';
                    const schedule = academy.schedule ? academy.schedule.toLowerCase() : '';
                    const mode = academy.mode ? academy.mode.toLowerCase() : '';
                    const duration = academy.duration ? academy.duration.toLowerCase() : '';
                    
                    // Combine all searchable text
                    const allText = title + ' ' + description + ' ' + instructor + ' ' + level + ' ' + schedule + ' ' + mode + ' ' + duration;
                    
                    if (allText.includes(searchTerm)) {
                        matchingAcademies.push({
                            ...academy,
                            originalIndex: index
                        });
                    }
                });
                
                console.log('Search term:', searchTerm);
                console.log('Matching academies:', matchingAcademies.length);
                
                if (matchingAcademies.length === 0) {
                    // Show no results message
                    const academyGrid = document.getElementById('academyGrid');
                    academyGrid.innerHTML = `
