                        const mode = card.querySelector('.bg-purple-100')?.textContent.toLowerCase() || '';
                        const duration = card.querySelector('div.flex.items-center.justify-between.text-sm span:first-child')?.textContent.toLowerCase() || '';
                        
                        const allText = title + ' ' + description + ' ' + instructor + ' ' + level + ' ' + schedule + ' ' + mode + ' ' + duration;
                        
                        if (allText.includes(searchTerm)) {
