        // Initialize filters and pagination
        function initializeFilters() {
            const categoryBtns = document.querySelectorAll('.category-btn');
            const searchInput = document.getElementById('searchInput');
            
            // Category filter
            categoryBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    // Update active button styling
                    categoryBtns.forEach(b => {
                        b.classList.remove('bg-orange-500', 'text-white');
                        b.classList.add('bg-gray-200', 'text-gray-700');
                    });
                    this.classList.remove('bg-gray-200', 'text-gray-700');
                    this.classList.add('bg-orange-500', 'text-white');
                    
                    const category = this.dataset.category;
                    const searchTerm = searchInput.value.toLowerCase();
                    filterPosts(category, searchTerm);
                });
            });
            
            // Search functionality
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const activeCategory = document.querySelector('.category-btn.bg-orange-500')?.dataset.category || 'all';
                filterPosts(activeCategory, searchTerm);
            });
            
            // Load more button
            const loadMoreBtn = document.getElementById('loadMoreBtn');
            if (loadMoreBtn) {
                loadMoreBtn.addEventListener('click', function() {
                    currentPage++;
                    showPosts(currentPage);
                });
            }
        }
        
        // Filter posts function
        function filterPosts(category = 'all', searchTerm = '') {
            currentPage = 1;
            
            filteredPosts = allBlogPosts.filter(post => {
                const title = (post.title || '').toLowerCase();
                const description = (post.excerpt || post.description || '').toLowerCase();
                const author = (post.author || '').toLowerCase();
                const tags = Array.isArray(post.tags) ? post.tags.join(' ').toLowerCase() : '';
                
                const matchesCategory = category === 'all' || post.category === category;
                const matchesSearch = title.includes(searchTerm) || 
                                     description.includes(searchTerm) || 
                                     author.includes(searchTerm) || 
                                     tags.includes(searchTerm);
                
                return matchesCategory && matchesSearch;
            });
            
            // Re-render blog grid with filtered posts
            const blogGrid = document.getElementById('blogGrid');
            if (blogGrid) {
                blogGrid.innerHTML = '';
                filteredPosts.forEach(post => {
                    const postCard = createBlogCard(post);
                    blogGrid.appendChild(postCard);
                });
            }
            
            showPosts(currentPage);
            
            // Show results count
            showResultsCount(category, searchTerm);
        }
        
        // Show posts with pagination
        function showPosts(page) {
            const blogCards = document.querySelectorAll('#blogGrid article');
            const startIndex = (page - 1) * postsPerPage;
            const endIndex = startIndex + postsPerPage;
            
            blogCards.forEach((card, index) => {
                if (index >= startIndex && index < endIndex) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
            
            // Update load more button
            updateLoadMoreButton();
        }
        
        // Update load more button state
        function updateLoadMoreButton() {
            const loadMoreBtn = document.getElementById('loadMoreBtn');
            if (!loadMoreBtn) return;
            
            const visiblePosts = document.querySelectorAll('#blogGrid article[style="display: block"]').length;
            const totalFilteredPosts = filteredPosts.length;
            const remainingPosts = totalFilteredPosts - visiblePosts;
            
            if (remainingPosts <= 0) {
                loadMoreBtn.textContent = 'Tidak Ada Artikel Lagi';
                loadMoreBtn.disabled = true;
                loadMoreBtn.classList.add('opacity-50', 'cursor-not-allowed');
            } else {
                loadMoreBtn.textContent = `Muat Lebih Banyak (${remainingPosts} artikel tersisa)`;
                loadMoreBtn.disabled = false;
                loadMoreBtn.classList.remove('opacity-50', 'cursor-not-allowed');
            }
        }
        
        // Show results count
        function showResultsCount(category, searchTerm) {
            const blogGrid = document.getElementById('blogGrid');
            const existingCount = blogGrid.querySelector('.results-count');
            if (existingCount) {
                existingCount.remove();
            }
            
            if (category !== 'all' || searchTerm) {
                const countDiv = document.createElement('div');
                countDiv.className = 'results-count col-span-full mb-6 p-4 bg-blue-50 rounded-lg';
                countDiv.innerHTML = `
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <i class="fas fa-filter text-blue-500 mr-2"></i>
                            <span class="text-blue-800">
                                Menampilkan <strong>${filteredPosts.length}</strong> artikel 
                                ${category !== 'all' ? `dari kategori <strong>"${category}"</strong>` : ''}
                                ${searchTerm ? ` untuk pencarian <strong>"${searchTerm}"</strong>` : ''}
                            </span>
                        </div>
                        <button onclick="clearFilters()" class="text-blue-600 hover:text-blue-800 text-sm">
                            <i class="fas fa-times mr-1"></i>Clear Filter
                        </button>
                    </div>
                `;
                blogGrid.insertBefore(countDiv, blogGrid.firstChild.nextSibling);
            }
        }
        
        // Clear all filters
        function clearFilters() {
            document.getElementById('searchInput').value = '';
            
            // Reset category buttons
            const categoryBtns = document.querySelectorAll('.category-btn');
            categoryBtns.forEach(btn => {
                btn.classList.remove('bg-orange-500', 'text-white');
                btn.classList.add('bg-gray-200', 'text-gray-700');
            });
            categoryBtns[0].classList.remove('bg-gray-200', 'text-gray-700');
            categoryBtns[0].classList.add('bg-orange-500', 'text-white');
            
            filterPosts('all', '');
        }
        
        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            loadBlogData();
        });
    </script>
    
