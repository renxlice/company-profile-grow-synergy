    <script>
        // Initialize Firestore explicitly if not available
        if (!window.db) {
            window.db = firebase.firestore();
        }
        
        // Load blog data from API
        let allBlogPosts = [];
        let filteredPosts = [];
        let currentPage = 1;
        const postsPerPage = 6;
        
        async function loadBlogData() {
            try {
                console.log(' Loading blog data from API...');
                const response = await fetch('/api/firebase/data');
                const data = await response.json();
                console.log(' Blog data loaded:', data.blogs);
                
                // Update blog section
                if (data.blogs && data.blogs.length > 0) {
                    allBlogPosts = data.blogs;
                    filteredPosts = [...allBlogPosts];
                    
                    const blogGrid = document.getElementById('blogGrid');
                    if (blogGrid) {
                        blogGrid.innerHTML = '';
                        data.blogs.forEach(post => {
                            const postCard = createBlogCard(post);
                            blogGrid.appendChild(postCard);
                        });
                    }
                    
                    // Initialize pagination and filters
                    initializeFilters();
                    showPosts(currentPage);
                } else {
                    // Show empty state
                    const blogGrid = document.getElementById('blogGrid');
                    if (blogGrid) {
                        blogGrid.innerHTML = `
                            <div class="col-span-full text-center py-12">
                                <i class="fas fa-blog text-6xl text-gray-300 mb-4"></i>
                                <h3 class="text-xl font-semibold text-gray-600 mb-2">Belum Ada Artikel</h3>
                                <p class="text-gray-500">Artikel blog akan segera tersedia. Silakan kunjungi kembali nanti.</p>
                            </div>
                        `;
                    }
                }
                
                console.log(' Blog page updated with Firestore data!');
            } catch (error) {
                console.error(' Error loading blog data:', error);
                // Show error state
                const blogGrid = document.getElementById('blogGrid');
                if (blogGrid) {
                    blogGrid.innerHTML = `
                        <div class="col-span-full text-center py-12">
                            <i class="fas fa-exclamation-triangle text-6xl text-red-300 mb-4"></i>
                            <h3 class="text-xl font-semibold text-red-600 mb-2">Gagal Memuat Artikel</h3>
                            <p class="text-gray-500">Terjadi kesalahan saat memuat data. Silakan refresh halaman.</p>
                        </div>
                    `;
                }
            }
        }
        
        function createBlogCard(post) {
            const card = document.createElement('article');
            card.className = 'bg-white rounded-lg shadow-lg overflow-hidden cursor-pointer transform transition-all duration-300 hover:scale-105 hover:shadow-xl';
            
            // Use slug if available, otherwise use ID as fallback
            const blogSlug = post.slug || post.id;
            console.log('Creating card for blog:', post.title, 'slug:', blogSlug);
            
            // Store category data for filtering
            card.dataset.category = post.category || 'general';
            card.dataset.title = post.title || '';
            card.dataset.description = post.excerpt || post.description || '';
            card.dataset.featured = post.featured || false;
            
            card.onclick = () => {
                console.log('Navigating to:', `/blog/${blogSlug}`);
                window.location.href = `/blog/${blogSlug}`;
            };
            
            // Format date
            const formatDate = (dateString) => {
                if (!dateString) return 'No date';
                const date = new Date(dateString);
                return date.toLocaleDateString('id-ID', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                });
            };
            
            // Category badge colors
            const getCategoryColor = (category) => {
                const colors = {
                    'tutorial': 'bg-blue-100 text-blue-800',
                    'tips': 'bg-green-100 text-green-800',
                    'career': 'bg-purple-100 text-purple-800',
                    'industry': 'bg-orange-100 text-orange-800',
                    'general': 'bg-gray-100 text-gray-800'
                };
                return colors[category] || colors.general;
            };
            
            card.innerHTML = `
                <div class="relative">
                    ${post.featured ? '<div class="absolute top-4 left-4 z-10 bg-gradient-to-r from-orange-500 to-red-500 text-white px-3 py-1 rounded-full text-sm font-semibold shadow-lg flex items-center"><i class="fas fa-star mr-1"></i>Featured</div>' : ''}
                    <img src="${post.image || '/images/blog-placeholder.jpg'}" alt="${post.title}" class="w-full h-48 object-cover">
                    <div class="absolute top-4 right-4">
                        <span class="${getCategoryColor(post.category)} px-2 py-1 rounded-full text-xs font-semibold">
                            ${post.category || 'General'}
                        </span>
                    </div>
                </div>
                <div class="p-6">
                    <div class="flex items-center text-sm text-gray-500 mb-2">
                        <i class="fas fa-calendar mr-2"></i>
                        <span>${formatDate(post.date || post.publishedDate || post.createdAt)}</span>
                        <span class="mx-2">â€¢</span>
                        <i class="fas fa-clock mr-1"></i>
                        <span>${post.readTime || '5'} min read</span>
                    </div>
                    <h2 class="text-xl font-bold mb-3 text-gray-800 line-clamp-2">
                        ${post.title}
                    </h2>
                    <p class="text-gray-600 mb-4 line-clamp-3">
                        ${post.excerpt || post.description || 'No description available'}
                    </p>
