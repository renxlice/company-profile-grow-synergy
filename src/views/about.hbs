        // Load experts from Firestore
        async function loadExperts() {
            console.log('DEBUG: Starting loadExperts for about page...');
            try {
                const expertsCollection = db.collection('experts');
                const snapshot = await expertsCollection.get();
                const expertsGrid = document.getElementById('expertsGrid');
                
                if (!expertsGrid) {
                    console.error('DEBUG: expertsGrid element not found');
                    return;
                }
                
                // Clear loading placeholders
                expertsGrid.innerHTML = '';
                
                if (snapshot.empty) {
                    console.log('DEBUG: No experts found in Firestore');
                    // Show fallback message
                    expertsGrid.innerHTML = '<div class="col-span-full text-center text-gray-500">Belum ada data tim profesional</div>';
                    return;
                }
                
                // Limit to 4 experts for about page
                const experts = snapshot.docs.slice(0, 4);
                
                experts.forEach((doc, index) => {
                    const expert = doc.data();
                    const expertId = doc.id;
                    
                    console.log('DEBUG: Loading expert:', expert);
                    
                    // Determine border color based on position
                    const borderColors = ['border-blue-500', 'border-green-500', 'border-orange-500', 'border-indigo-500'];
                    const positionColors = ['text-blue-600', 'text-green-600', 'text-orange-600', 'text-indigo-600'];
                    const borderColor = borderColors[index % borderColors.length];
                    const positionColor = positionColors[index % positionColors.length];
                    
                    // Generate star rating
                    const rating = parseFloat(expert.rating) || 0;
                    const reviewCount = parseInt(expert.reviewCount) || 0;
                    const stars = generateStarRating(rating);
                    
                    // Create expert card HTML
                    const expertCard = `
                        <div class="text-center">
                            <img src="${expert.image || `https://picsum.photos/seed/expert${expertId}/300/300.jpg`}" 
                                 alt="${expert.name}" 
                                 class="w-32 h-32 rounded-full mx-auto mb-4 object-cover border-4 ${borderColor}">
                            <h3 class="text-xl font-bold text-gray-800 mb-2">${expert.name}</h3>
                            <p class="${positionColor} font-semibold mb-2">${expert.position}</p>
                            <p class="text-sm text-gray-500 mb-4">${expert.experience}</p>
                            <div class="text-center mb-4">
                                <div class="flex justify-center space-x-1">
                                    ${stars}
                                </div>
                                <div class="text-sm text-gray-600">${rating} (${reviewCount})</div>
                            </div>
                        </div>
                    `;
                    
                    expertsGrid.innerHTML += expertCard;
                });
                
                console.log('DEBUG: Experts loaded successfully');
            } catch (error) {
                console.error('DEBUG: Error loading experts:', error);
                const expertsGrid = document.getElementById('expertsGrid');
                if (expertsGrid) {
                    expertsGrid.innerHTML = '<div class="col-span-full text-center text-red-500">Gagal memuat data tim profesional</div>';
                }
            }
        }
        
        // Generate star rating HTML
        function generateStarRating(rating) {
            let stars = '';
            const fullStars = Math.floor(rating);
            const hasHalfStar = rating % 1 !== 0;
            
            // Add full stars
            for (let i = 0; i < fullStars; i++) {
                stars += '<i class="fas fa-star text-yellow-400"></i>';
            }
            
            // Add half star if needed
            if (hasHalfStar) {
                stars += '<i class="fas fa-star-half-alt text-yellow-400"></i>';
            }
            
            // Add empty stars to make 5 stars total
            const emptyStars = 5 - Math.ceil(rating);
            for (let i = 0; i < emptyStars; i++) {
                stars += '<i class="far fa-star text-yellow-400"></i>';
            }
            
            return stars;
        }
        
        // Load hero section from Firebase
        async function loadHeroSection() {
            console.log('DEBUG: Starting loadHeroSection for about page...');
            try {
                console.log('DEBUG: Fetching from /api/hero-section...');
                const response = await fetch('/api/hero-section');
                const heroSections = await response.json();
                console.log('DEBUG: Hero sections response:', heroSections);
                
                if (heroSections.length > 0) {
                    const hero = heroSections[0];
                    const backgroundImage = document.getElementById('hero-background-image');
                    console.log('DEBUG: Elements found:', {
                        backgroundImage: !!backgroundImage
                    });
                    
                    if (hero.backgroundImage && backgroundImage) {
                        backgroundImage.style.cssText = `background-image: url('${hero.backgroundImage}') !important; background-size: cover !important; background-position: center !important; background-repeat: no-repeat !important;`;
                        console.log('DEBUG: Background image updated successfully');
                    }
                    
                    // Update text content
                    const subtitle = document.getElementById('hero-subtitle');
                    const title = document.getElementById('hero-title');
                    const description = document.getElementById('hero-description');
                    
                    if (subtitle && hero.subtitle) {
                        subtitle.textContent = hero.subtitle;
                    }
                    if (title && hero.title) {
                        title.textContent = hero.title;
                    }
                    if (description && hero.description) {
                        description.textContent = hero.description;
                    }
                }
            } catch (error) {
                console.error('DEBUG: Error loading hero section:', error);
            }
        }
        
        // Load all data when page loads
        document.addEventListener('DOMContentLoaded', () => {
            loadHeroSection();
            loadExperts();
        });
    </script>
